{
    "template": "<!-- Modal popup info -->\n<script type=\"text/ng-template\" id=\"info.html\">\n  <div class=\"container\" style=\"padding: 30px; border: 1px solid #456;\">\n    <a ng-click=\"$close()\" class=\"pull-right btn btn-danger\">X</a>\n\t\t<table style=\"color: white\">\n      <tr>\n        <td>\n          <div>Widget {{ngModel.name}}</div>\n          <div>Item {{config.item}}</div>\n          <div>Size {{ngModel.sizeX}} x {{ngModel.sizeY}}</div>\n          <div>Don't wrap {{config.dontwrap}}</div>\n       </td>\n      </tr>\n    </table>\n  </div>\n</script>\n\n<script type=\"text/ng-template\" id=\"confirmSwitchModal.html\">\n  <div class=\"container\" style=\"padding: 30px; border: 1px solid #456;\">\n    <a ng-click=\"$close()\" class=\"pull-right btn btn-danger\">X</a>\n    <table>\n      <tr>\n        <td>\n          <h3 style=\"color: white\">\n            <div ng-if=\"itemState(config.item) == 'OFF'\" style=\"color: #0db9f0\">Click if you really want to turn ON '{{ngModel.name}}':</div>\n            <div ng-if=\"itemState(config.item) == 'ON'\" style=\"color: Red\">Click if you really want to turn OFF '{{ngModel.name}}':</div>\n            <div ng-if=\"itemState(config.item) != 'OFF' && itemState(config.item) != 'ON'\" style=\"color: Red\">Unknow state for '{{ngModel.name}}. Click to force ON:'</div>\n          </h3>\n        </td>\n        <td>\n          <button class=\"pull-center btn btn-lg\"\n                  ng-if=\"itemState(config.item) == 'OFF'\"\n                  style= \"border: none; background: rgba(0,0,0,0); outline:none; \" \n                  ng-click=\"sendCmd(config.item, 'ON');$close()\"> \n            <widget-icon iconset=\"config.confirm_icon_iconset || 'smarthome-set'\" icon=\"config.confirm_icon || 'power-button'\" size=\"64\" state=\"itemState(config.item)\" />           \n          </button>\n          <button class=\"pull-center btn btn-lg\"\n                  ng-if=\"itemState(config.item) == 'ON'\"\n                  style= \"border: none; background: rgba(0,0,0,0); outline:none; \" \n                  ng-click=\"sendCmd(config.item, 'OFF');$close()\"> \n            <widget-icon iconset=\"config.confirm_icon_iconset || 'smarthome-set'\" icon=\"config.confirm_icon || 'power-button'\" size=\"64\" state=\"itemState(config.item)\" />\n          </button>      \n          <button class=\"pull-center btn btn-lg\"\n                  ng-if=\"itemState(config.item) != 'OFF' && itemState(config.item) != 'ON'\"\n                  style= \"border: none; background: rgba(0,0,0,0); outline:none; \" \n                  ng-click=\"sendCmd(config.item, 'ON');$close()\"> \n            <widget-icon iconset=\"config.confirm_icon_iconset || 'smarthome-set'\" icon=\"config.confirm_icon || 'power-button'\" size=\"64\" state=\"itemState(config.item)\" />\n          </button>\n        </td>\n      </tr>\n    </table>\n\n  </div>\n</script>\n<h3 ng-if=\"config.item == NULL\" style=\"color: red\">Widget not properly configured</h3>\n    \n<!-- Display info button -->\n<div style=\"position:absolute;top:5px;left:5px;color:#0db9f0\" ng-click=\"openModal('info.html', true, 'md')\">\n  <img title=\"Info\" src=\"/static/vletroye/images/info.png\" width=\"10px\"/>\n</div>\n\n<div ng-if=\"config.item != NULL\">\n  <div ng-if=\"itemState(config.item) == 'OFF' && config.confirm_on == false\" >\n    <div ng-click=\"sendCmd(config.item, 'ON')\">\n      <div>{{ngModel.name}}</div>\n      <widget-icon iconset=\"config.widget_icon_iconset || 'eclipse-smarthome-classic'\" icon=\"config.widget_icon || 'poweroutlet'\" size=\"64\" backdrop=\"false\" center=\"true\" inline=\"false\" state=\"OFF\"></widget-icon>\n      <div style=\"color: #89a\">OFF</div>\n    </div>    \n  </div>\n  <div ng-if=\"itemState(config.item) == 'ON' && config.confirm_off == false\" >\n    <div ng-click=\"sendCmd(config.item, 'OFF')\">\n      <div>{{ngModel.name}}</div>\n      <widget-icon iconset=\"config.widget_icon_iconset || 'eclipse-smarthome-classic'\" icon=\"config.widget_icon || 'poweroutlet'\" size=\"64\" backdrop=\"false\" center=\"true\" inline=\"false\" state=\"OFF\"></widget-icon>\n      <div style=\"color: #0db9f0\">ON</div>\n    </div>    \n  </div>\n  <div ng-if=\"!(itemState(config.item) == 'OFF' && config.confirm_on == false) && !(itemState(config.item) == 'ON' && config.confirm_off == false)\" >\n    <div ng-click=\"openModal('confirmSwitchModal.html', true, 'lg')\">\n      <div>{{ngModel.name}}</div>\n      <widget-icon iconset=\"config.widget_icon_iconset || 'eclipse-smarthome-classic'\" icon=\"config.widget_icon || 'poweroutlet'\" size=\"64\" backdrop=\"false\" center=\"true\" inline=\"false\" state=\"OFF\"></widget-icon>\n      <widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'shield'\" backdrop=\"true\" center=\"true\" inline=\"false\" state=\"itemState(config.item)\"></widget-icon>\n      <div ng-if=\"itemState(config.item) != 'OFF' && itemState(config.item) != 'ON'\" style=\"color: #89a\">Unknown</div>\n      <div ng-if=\"itemState(config.item) == 'OFF'\" style=\"color: #89a\">OFF</div>\n      <div ng-if=\"itemState(config.item) == 'ON'\" style=\"color: #0db9f0\">ON</div>\n    </div>\n  </div>\n</div>",
    "name": "Confirm Switch",
    "author": "vletroye",
    "description": "Ask for confirmation before changing the state of a Switch",
    "settings": [
        {
            "type": "item",
            "id": "item",
            "label": "openHab Item",
            "description": "Item to be controled by the Confirm Switch"
        },
        {
            "type": "checkbox",
            "id": "confirm_on",
            "label": "Confirm ON",
            "default": true,
            "description": "Prompt to confirm when turning ON"
        },
        {
            "type": "checkbox",
            "id": "confirm_off",
            "default": true,
            "label": "Confirm OFF",
            "description": "Prompt to confirm when turning OFF"
        },
        {
            "type": "icon",
            "id": "widget_icon",
            "label": "Icon",
            "description": "Icon used on the Widget"
        },
        {
            "type": "icon",
            "id": "confirm_icon",
            "label": "Confirmation Icon",
            "description": "Icon used in the Confirmation popup"
        }
    ]
}